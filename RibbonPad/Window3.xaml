                <Setter Property="Visibility" Value="Visible" TargetName="ButtonContent" />
              </Trigger>
              <Trigger Property="Button.IsPressed" Value="True">
                <Setter TargetName="ButtonBorder" Property="Ellipse.Stroke">
                  <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                      <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#FF63290E" Offset="0" />
                        <GradientStop Color="#FFB08E3C" Offset="1" />
                      </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                  </Setter.Value>
                </Setter>
                <Setter TargetName="ButtonBorder" Property="Ellipse.Fill">
                  <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                      <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#FFBB7B2C" Offset="0" />
                        <GradientStop Color="#FFE7C763" Offset="1" />
                      </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                  </Setter.Value>
                </Setter>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <!-- Maximize/Restore Button Style-->
    <Style TargetType="{x:Type Button}" x:Key="MaximizeButton">
      <Setter Property ="FocusVisualStyle" Value="{x:Null}" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Grid
              Width="14"
              Height="14"
              SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
              Name="AppButton">
              <Ellipse Name="ButtonBorder" StrokeThickness ="1" Width ="14" Height="14">
                <Ellipse.Stroke>
                  <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <LinearGradientBrush.GradientStops>
                      <GradientStop Color="#FF1D3E04" Offset="0" />
                      <GradientStop Color="#FF6C8C3B" Offset="1" />
                    </LinearGradientBrush.GradientStops>
                  </LinearGradientBrush>
                </Ellipse.Stroke>
                <Ellipse.Fill>
                  <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <LinearGradientBrush.GradientStops>
                      <GradientStop Color="#FF78C32B" Offset="0" />
                      <GradientStop Color="#FFC9EB78" Offset="1" />
                    </LinearGradientBrush.GradientStops>
                  </LinearGradientBrush>
                </Ellipse.Fill>
                <Ellipse.BitmapEffect>
                  <DropShadowBitmapEffect Color="White" Direction="270" ShadowDepth="1" Softness="0.1" Opacity="0.7"/>
                </Ellipse.BitmapEffect>
              </Ellipse>
              <Ellipse Name="TH" Width ="12" Height ="12">
                <Ellipse.Fill>
                  <RadialGradientBrush Center="0.5,0" GradientOrigin =".5,0" RadiusX =".3" RadiusY =".6">
                    <RadialGradientBrush.GradientStops>
                      <GradientStop Color ="White" Offset ="0" />
                      <GradientStop Color ="Transparent" Offset ="1" />
                    </RadialGradientBrush.GradientStops>
                  </RadialGradientBrush>
                </Ellipse.Fill>
              </Ellipse>
              <Ellipse Name="BH" Width ="12" Height ="12">
                <Ellipse.Fill>
                  <RadialGradientBrush Center="0.5,1" GradientOrigin =".5,1" RadiusX =".7" RadiusY =".7">
                    <RadialGradientBrush.GradientStops>
                      <GradientStop Color ="#10FFFFFF" Offset ="0" />
                      <GradientStop Color ="Transparent" Offset ="1" />
                    </RadialGradientBrush.GradientStops>
                  </RadialGradientBrush>
                </Ellipse.Fill>
              </Ellipse>
              <Canvas Width="8" Height="8" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden" Name="ButtonContent">
                <Line X1 ="0" Y1 ="4" X2 ="8" Y2 ="4" Stroke ="#FF384D1B" StrokeThickness="2" />
                <Line X1 ="4" Y1 ="0" X2 ="4" Y2 ="8" Stroke ="#FF384D1B" StrokeThickness="2" />
              </Canvas>
            </Grid>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Visibility" Value="Visible" TargetName="ButtonContent" />
              </Trigger>
              <Trigger Property="Button.IsPressed" Value="True">
                <Setter TargetName="ButtonBorder" Property="Ellipse.Stroke">
                  <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                      <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#FF21420C" Offset="0" />
                        <GradientStop Color="#FF728E44" Offset="1" />
                      </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                  </Setter.Value>
                </Setter>
                <Setter TargetName="ButtonBorder" Property="Ellipse.Fill">
                  <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                      <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#FF4D821C" Offset="0" />
                        <GradientStop Color="#FFA0CA59" Offset="1" />
                      </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
