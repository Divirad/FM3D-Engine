<fm:ToolWindow x:Class="FM3D_Designer.src.ToolWindows.Skeleton.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FM3D_Designer.src.ToolWindows.Skeleton"
        xmlns:fm="clr-namespace:FM3D_Designer.src"
        mc:Ignorable="d"
        xmlns:ctrls="clr-namespace:DevComponents.WPF.Controls;assembly=DevComponents.WPF.Controls"
        Header="Properties">
    <Grid>
        <ctrls:PropertyGrid x:Name="grid" 
                            SelectedObject="{Binding partsWin.SelectedPart}"
                            ShowToolBar="False"
                            ShowSubProperties="False"
                            ShowReadOnlyProperties="True"
                            ShowToolTips="True"
                            ShowHelpPanel="True"/>
    </Grid>
</fm:ToolWindow>
