<local:WindowLayout x:Class="FM3D_Designer.src.WindowLayouts.TextureLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dd="clr-namespace:DevComponents.WpfDock;assembly=DevComponents.WpfDock"
        xmlns:local="clr-namespace:FM3D_Designer.src"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu x:Name="menu" Grid.Row="0" Background="{ Binding MenuBackGroundBrush, Source={x:Static local:Theme.Current}}" Foreground="{ Binding MainFontBrush, Source={x:Static local:Theme.Current}}">
            <MenuItem Header="_File" />
            <MenuItem Header="_Edit" />
            <MenuItem Header="_View" />
            <MenuItem Header="_Window" />
            <MenuItem Header="_Help" />
        </Menu>
        <dd:DockSite  Grid.Row="1"  Name="dockSite" VisualStyle="Office2016">
        </dd:DockSite>
    </Grid>
</local:WindowLayout>
