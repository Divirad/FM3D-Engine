<MahApps:BaseMetroDialog x:Class="FM3D_Designer.src.Dialogs.NewResourceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FM3D_Designer.src.Dialogs"
        xmlns:MahApps="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns:lib="clr-namespace:DesignerLib;assembly=DesignerLib"

        mc:Ignorable="d"
        Title="NewResourceDialog"
        Height="300"
        HorizontalAlignment="Stretch">

    <MahApps:BaseMetroDialog.Resources>
        <lib:FoundResource x:Key="res"/>
    </MahApps:BaseMetroDialog.Resources>
    
    <Grid>
        <ListBox>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="4, 0" Checked="{Binding Selected, Mode=TwoWay}"/>
                        <TextBlock Margin="4, 0" Text="{Binding Name}"/>
                        <TextBox Margin="4, 0" Text="{Binding Path, Mode=TwoWay}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</MahApps:BaseMetroDialog>
