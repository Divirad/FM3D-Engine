        <dc:AdvTree DataContext="{StaticResource res}" ItemsSource="{Binding Resources, Mode=OneWay}">
            <dc:AdvTree.ColumnDefinitions>
                <dc:ColumnDefinitionCollection AllowColumnReorder="False" ShowGridLines="True" IsContextMenuEnabled="False">
                    <dc:ColumnDefinition Header="Name" Width="auto" BindingMemberPath="Name" >
                        <dc:ColumnDefinition.CellContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="20" Source="/FM3D-Designer;component/resources/images/chain.png" /> <!--Visibility="{Binding IsReference, Converter={StaticResource BToVConv}}"/>-->
                                    <Image Height="20" Source="{Binding Type, Converter={StaticResource IconConv}}"/>
                                    <TextBlock Height="20" Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </dc:ColumnDefinition.CellContentTemplate>
                    </dc:ColumnDefinition>
                    <dc:ColumnDefinition Header="Path" Width="auto" BindingMemberPath="Path" CellIsEditable="True"/>
                </dc:ColumnDefinitionCollection>
            </dc:AdvTree.ColumnDefinitions>
        </dc:AdvTree>
